rules_version = '2';

// Firestore Security Rules
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to all documents
    // Note: This is permissive for development - consider restricting in production
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2026, 12, 31);
    }
  }
}

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    // Allow anonymous users to upload and read files in projects folder
    match /projects/{projectId}/uploads/{allPaths=**} {
      allow read, write: if request.auth != null || request.auth.uid != null;
    }
    
    // Fallback rule for other paths
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}